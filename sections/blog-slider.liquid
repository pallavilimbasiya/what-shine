<link  rel="stylesheet"  href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"/>
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>



<!-- Slider main container -->
<section class="myblog_slider">
  <div class="page-width">
    <h2>{{ section.settings.heading }}</h2>
    <div class="swiper myswiper">
      <!-- Additional required wrapper -->
      <div class="swiper-wrapper">
        <!-- Slides -->
        {% for myblock in section.blocks %}
            <div class="swiper-slide">
              
              <img src="{{ myblock.settings.img | image_url}}"/>
              <h4>{{ myblock.settings.title }}</h4>
            </div> 
        {% endfor %}
      </div>
      <!-- If we need pagination -->
      <div class="swiper-pagination"></div>
    
    </div>
  </div>
</section>


<style>
    .myblog_slider {
    background: {{section.settings.bg_colr}};
    padding: {{section.settings.padding}}px 0;
  }
  .myblog_slider h2 {
    text-align: center;
    font-weight: bold;
    text-transform: uppercase;
    margin: 0 0 40px 0
  }
  .swiper-slide {
    background: #fff;
  }
  .swiper-slide h4 {
    padding: 15px;
    font-weight: bold;
    font-size: 18px;
    margin: 10px 0
  }
  .swiper-slide img{
    width: 100%;
    max-width: 100%;
    height: 340px;
    object-fit: cover;
    display: block
  }
  .swiper {
    width: 100%;
  }
  .swiper-pagination {
    position: relative;
    margin-top: 20px
  }
</style>



{% schema %}
  {
    "name": "Blog Slider",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Section Heading"
      },
      {
        "type": "color",
        "id": "bg_colr",
        "label": "select background color"
      },
      {
        "type": "range",
        "id": "padding",
        "min": 50,
        "max": 100,
        "step": 10,
        "unit": "px",
        "label": "padding",
        "default": 50
      }
    ],
    "blocks":
    [
      {
        "type": "text",
        "name": "New slide",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Slide Title"
          },
          {
            "type": "image_picker",
            "id": "img",
            "label": "Select Image"
          }
        ]
      }
    ],
    "presets":[
      {
        "name": "Blog Slider"
      }
    ]
  }
{% endschema %}


{% javascript %}
  const swiper = new Swiper('.myswiper', {
  // Optional parameters
  direction: 'horizontal',
  loop: true,
    slidesPerView: 2,
      spaceBetween: 20,
autoplay: true,
      grabCursor: true,
  // If we need pagination
  pagination: {
    el: '.swiper-pagination',
    clickable: true,
  },
    dots: 3,
});
{% endjavascript %}